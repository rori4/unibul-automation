<div class="main-content-container container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            <span class="text-uppercase page-subtitle">Overview</span>
            <h3 class="page-title">Data Tables</h3>
        </div>
    </div>
    <!-- End Page Header -->
    <!-- Default Light Table -->
    <div class="row">
        <div class="col">
            <div class="card card-small mb-4">
                <div class="card-header border-bottom">
                    <h6 class="m-0">Scheduled Promotions</h6>
                </div>
                <div class="card-body p-0 pb-3 text-center">
                    <table class="table mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0">#</th>
                                <th scope="col" class="border-0">Title</th>
                                <th scope="col" class="border-0">Amazon Link</th>
                                <th scope="col" class="border-0">Start Date</th>
                                <th scope="col" class="border-0">End Date</th>
                                <th scope="col" class="border-0">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each bookPromotions}}
                            <tr>
                                <td>{{inc @key}}</td>
                                <td>{{this.book.title}}</td>
                                <td><a href="{{this.book.amazonUrl}}">Go To Amazon</a></td>
                                <td>{{formatDate this.dateFrom "short"}}</td>
                                <td>{{formatDate this.dateTo "short"}}</td>
                                <td>
                                    {{#ifEquals this.status "waiting"}}
                                        <img src="/images/loading.gif" style="height: 30px" title="The promotion is being processed. Please check back later.">
                                    {{else}}
                                    <a href="/books/promotions/{{this._id}}">
                                        <i class="material-icons">list</i>
                                    </a>
                                    {{/ifEquals}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {{#unless bookPromotions}}
    <div class="row justify-content-center align-items-center">
        <p>There are no promotions for this book. Please <a href="/books/promotions/add">add a promotion.</a></p>
    </div>
    {{/unless}}
    <!-- End Default Light Table -->
    <!-- Default Dark Table -->

    <!-- End Default Dark Table -->
</div>